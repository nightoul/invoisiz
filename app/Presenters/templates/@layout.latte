<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>Invoisiz</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">

	<link href="/invoisiz/www/css/custom.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
</head>

<body>
	<div n:snippet="flashMessages">
		<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type} alert-dismissible fade show" role="alert">
			<small>{$flash->message}</small>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	</div>

	<div class="container-fluid">
		<div class="row vh-100">
			<div class="col-2 d-flex flex-column text-white bg-dark">
				<a n:href="Sign:out" class="pull-right">Logout</a>
				<hr>
				<ul class="nav nav-pills flex-column mb-auto">
					<li>
						<a n:href="Homepage:" n:class="$presenter->getName() === 'Homepage' ? active : '', nav-link, text-white"><i class="bi bi-house-fill"></i><span class="ms-2">Home</span></a>
					</li>
					<li n:if="$presenter->hasPermission('contractors_list')">
						<a n:href="Contractor:" n:class="$presenter->getName() === 'Contractor' ? active : '', nav-link, text-white"><i class="bi bi-people-fill"></i><span class="ms-2">Contractors</span></a>
					</li>
					<li n:if="$presenter->hasPermission('clients_list')">
						<a n:href="Client:" n:class="$presenter->getName() === 'Client' ? active : '', nav-link, text-white"><i class="bi bi-phone-fill"></i><span class="ms-2">Clients</span></a>
					</li>
					<li n:if="$presenter->hasPermission('invoices_list')">
						<a n:href="Invoice:" n:class="$presenter->getName() === 'Invoice' ? active : '', nav-link, text-white"><i class="bi bi-file-pdf-fill"></i><span class="ms-2">Invoices</span></a>
					</li>
				</ul>
				<hr>
			</div>
			<div class="col-10">
				{include content}
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/naja@2/dist/Naja.min.js"></script>
	<script>
		naja.initialize();
	</script>
	<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script src="/invoisiz/www/js/custom.js"></script>
</body>
</html>
